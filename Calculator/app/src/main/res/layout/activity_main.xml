<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#000000"
    android:clickable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling">

        <TextView
            android:id="@+id/inputField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:freezesText="true"
            android:hint="0"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="45dp"
            android:scrollHorizontally="true"/>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrolling"
        android:orientation="vertical">

        <Button
            android:id="@+id/openParenthesis"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="("
            android:textStyle="bold" />

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="0"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/closeParenthesis"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text=")"
            android:textStyle="bold" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pointButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="."
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:orientation="vertical">

        <Button
            android:id="@+id/percentButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="%"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="9"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="="
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout3"
        android:layout_toRightOf="@+id/linearLayout3"
        android:orientation="vertical">

        <Button
            android:id="@+id/acButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="AC"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="รท"
            android:textStyle="bold" />

        <Button
            android:id="@+id/timesButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="x"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="-"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="+"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrolling"
        android:layout_toEndOf="@+id/linearLayout4"
        android:layout_toRightOf="@+id/linearLayout4"
        android:orientation="vertical">

        <Button
            android:id="@+id/sinButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="sin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cosinButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="cos"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tanButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="tan"
            android:textStyle="bold" />

        <Button
            android:id="@+id/expButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="EXP"
            android:textStyle="bold" />

        <Button
            android:id="@+id/piButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="ฯ"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_toEndOf="@+id/linearLayout5"
        android:layout_toRightOf="@+id/linearLayout5"
        android:orientation="vertical">

        <Button
            android:id="@+id/asinButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="sin-1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acosButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="cos-1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/atanButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="tan-1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/eButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="e"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rootButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="โ"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="82dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrolling"
        android:layout_toEndOf="@+id/linearLayout6"
        android:layout_toRightOf="@+id/linearLayout6"
        android:orientation="vertical">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="DEL"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="log"
            android:textStyle="bold" />

        <Button
            android:id="@+id/log10Button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="log10"
            android:textStyle="bold" />

        <Button
            android:id="@+id/radianButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="RAD"
            android:textStyle="bold" />

        <Button
            android:id="@+id/degreeButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/button"
            android:text="DEG"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>
