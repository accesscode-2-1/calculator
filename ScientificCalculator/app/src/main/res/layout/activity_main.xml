<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.poojawins.c4q.nyc.scientificcalculator.MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@+id/verticalLayout"
    android:background="#60005f">

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:stretchColumns="4"
       android:background="#60005f"
       >

   <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1">

       <TextView
           android:layout_height="110dp"
           android:layout_width="match_parent"
           android:id="@+id/displayText"
           android:layout_span="4"
           android:layout_marginTop="7dp"
           android:layout_marginBottom="20dp"
           android:layout_marginRight="3dp"
           android:layout_marginLeft="3dp"
           android:layout_weight="1"
           android:background="@drawable/my_border_text"
           android:textColor="#ffffffff"
           android:textSize="30sp"
           android:gravity="center_vertical|end"
           android:padding="10dp"
           android:singleLine="false" />

   </TableRow>

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1">

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/acButton"
           android:text="@string/ac"
           android:textStyle="bold"
           android:textSize="20sp"
           android:textColor="#ffffffff"
           android:layout_weight="1"
           android:background="@drawable/my_border_special_buttons" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/percentButton"
           android:text="@string/percent"
           android:textStyle="bold"
           android:textSize="20sp"
           android:textColor="#ffffffff"
           android:layout_weight="1"
           android:background="@drawable/my_border_operators" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/factorialButton"
           android:text="@string/factorial"
           android:textStyle="bold"
           android:textSize="20sp"
           android:textColor="#ffffffff"
           android:layout_weight="1"
           android:background="@drawable/my_border_operators" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/divideButton"
           android:text="@string/divide"
           android:textStyle="bold"
           android:textSize="20sp"
           android:textColor="#ffffffff"
           android:layout_weight="1"
           android:background="@drawable/my_border_operators" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number7Button"
            android:text="@string/numberSeven"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number8Button"
            android:text="@string/numberEight"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number9Button"
            android:text="@string/numberNine"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/multiplyButton"
            android:text="@string/multiple"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:background="@drawable/my_border_operators" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number4Button"
            android:text="@string/numberFour"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number5Button"
            android:text="@string/numberFive"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number6Button"
            android:text="@string/numberSix"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtractButton"
            android:text="@string/subtract"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:background="@drawable/my_border_operators" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number1Button"
            android:text="@string/numberOne"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number2Button"
            android:text="@string/numberTwo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number3Button"
            android:text="@string/numberThree"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusButton"
            android:text="@string/plus"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:background="@drawable/my_border_operators" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number0Button"
            android:text="@string/numberZero"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decimalButton"
            android:text="@string/decimal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/my_shape"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backspaceButton"
            android:text="@string/del"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:background="@drawable/my_border_special_buttons" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equalButton"
            android:text="@string/equal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_weight="1"
            android:background="@drawable/my_border_special_buttons" />

    </TableRow>

    </TableLayout>
</RelativeLayout>


