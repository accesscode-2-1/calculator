<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/verticalphi">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:id="@+id/gridLayout3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="2"
            android:id="@+id/number2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/number3"
            android:layout_gravity="bottom"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="3"
            android:id="@+id/number3"
            android:layout_alignTop="@+id/number1"
            android:layout_toEndOf="@+id/number1"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/number1"
            android:onClick="getButtonText"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/number2"
            android:layout_column="0"
            android:layout_row="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/number4"
            android:onClick="getButtonText"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="5"
            android:id="@+id/number5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="6"
            android:id="@+id/number6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="7"
            android:id="@+id/number7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="8"
            android:id="@+id/number8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="9"
            android:id="@+id/number9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getOperators"
            android:text="."
            android:id="@+id/decimalpoint"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getButtonText"
            android:text="0"
            android:id="@+id/number0"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:onClick="evaluateExpression"
            android:id="@+id/equals" />
    </GridLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true">



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="/"
        android:background="#ffffff"
        android:onClick="getOperators"
        android:id="@+id/divide"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="*"
        android:background="#ffffff"
        android:onClick="getOperators"
        android:id="@+id/times"
        android:layout_alignBaseline="@+id/positive"
        android:layout_alignBottom="@+id/positive"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:onClick="getOperators"
        android:text="-"
        android:background="#ffffff"
        android:id="@+id/minus"
        android:layout_below="@+id/times"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="getOperators"
            android:text="+"
            android:background="#ffffff"
            android:id="@+id/plus"
            android:layout_marginTop="15dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="AC"
            android:background="#ffffff"
            android:id="@+id/ac"
            android:onClick="allClear"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overNums"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/gridLayout3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:onClick="getOperators"
            android:id="@+id/button4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:onClick="positiveNegativeSwitch"
            android:id="@+id/negative" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:id="@+id/Openparens"
            android:onClick="openAndCloseParens"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/calcScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/customborder"
        android:inputType="number"
        android:layout_alignEnd="@+id/gridLayout3"
        android:layout_above="@+id/overNums"
        android:backgroundTint="#ff00dce6" />

</RelativeLayout>
